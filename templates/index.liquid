{% assign page = pages.frontpage %}
{{ page.content }}
{% assign collection = collections.frontpage %}
<section id="front-splash"></section>
<section id="front-collection">
  <div class="container">
    <div class="grid-row">
      {% for product in collection.products %}
      <div class="grid-item item-s-12 item-m-6 item-l-4">
        <img src="{{ product.featured_image | product_img_url: 'medium' }}" alt="{{ product.title | escape }}" />
        <h2><a href="{{ product.url }}">{{ product.title }}</a></h2>
        <span>{{ product.price }}</span>
      </div>
      {% else %}
      <div class="grid-item item-s-12">
        <p>You have no products in your Frontpage collection</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
