// FONTS

// declare font families here

font-face('FreeSans', 'FreeSans', normal)
font-face('FreeSansOblique', 'FreeSansOblique', normal, italic)
font-face('FreeSansBold', 'FreeSansBold', bold)
font-face('FreeSansBoldOblique', 'FreeSansBoldOblique', bold, italic)

$font-sans = 'FreeSans', font-stack('Helvetica')

// ******************************************************

// VARIABLES

$font-size-larger = 1.3rem

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = .001em
$font-tracking-wider = .05em

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

p
  margin-bottom: 1rem

// FONT RULES

.font-sans
  font-family: $font-sans

.font-larger
  font-size: $font-size-larger

em, .font-italic
  font-family: 'FreeSansOblique'
  font-style: normal
  strong, .font-bold
    font-family: 'FreeSansBoldOblique'

strong, .font-bold
  font-family: 'FreeSansBold'
  font-weight: normal
  em, .font-italic
    font-family: 'FreeSansBoldOblique'

.font-small-caps
  text-transform: uppercase
  font-size: .85em

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

// TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

.line-tighter
  line-height: $font-leading-tighter

// LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

p
  a,
  a:active,
  a:visited
    text-decoration: underline
    text-underline-position: under

font-sizes($size-basic = false, $size-extra = false, $size-large = false, $size-mid = false, $size-small = false, $size-tiny = false, $size-micro = false)

  if ($size-basic)
    html,
    .font-size-basic
      font-size: $size-basic

  if ($size-extra)
    .font-size-extra
      font-size: $size-extra

  if ($size-large)
    .font-size-large
      font-size: $size-large

  if ($size-mid)
    .font-size-mid
      font-size: $size-mid

  if ($size-small)
    .font-size-small
      font-size: $size-small

  if ($size-tiny)
    .font-size-tiny
      font-size: $size-tiny

  if ($size-micro)
    .font-size-micro
      font-size: $size-micro
