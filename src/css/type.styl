// FONTS

// declare font families here

font-face('FreeSans', 'FreeSans', normal)
font-face('FreeSans', 'FreeSansOblique', normal, italic)
font-face('FreeSans', 'FreeSansBold', bold)
font-face('FreeSans', 'FreeSansBoldOblique', bold, italic)

$font-sans = 'FreeSans', font-stack('Helvetica')
$font-serif = font-stack('Georgia')

// ******************************************************

// VARIABLES

$font-size-larger = 1.3rem

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = .001em
$font-tracking-wider = .05em

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

p
  margin-bottom: 1rem

// FONT RULES

.font-sans
  font-family: $font-sans

.font-serif
  font-family: $font-serif

.font-larger
  font-size: $font-size-larger

em, .font-italic
  font-style: italic

strong, .font-bold
  font-weight: bold

.font-small-caps
  text-transform: uppercase
  font-size: .85em

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

// TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

// LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

font-sizes($size-basic = false, $size-extra = false, $size-large = false, $size-mid = false, $size-small = false, $size-tiny = false, $size-micro = false)

  if ($size-basic)
    html,
    .font-size-basic
      font-size: $size-basic

  if ($size-extra)
    .font-size-extra
      font-size: $size-extra

  if ($size-large)
    .font-size-large
      font-size: $size-large

  if ($size-mid)
    .font-size-mid
      font-size: $size-mid

  if ($size-small)
    .font-size-small
      font-size: $size-small

  if ($size-tiny)
    .font-size-tiny
      font-size: $size-tiny

  if ($size-micro)
    .font-size-micro
      font-size: $size-micro
