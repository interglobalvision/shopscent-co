@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)
$color-red = rgb(255, 0, 0)

// ******************************************************

// BASIC

html
  background-color: $color-white
  color: $color-black

body
  overflow-x: hidden

img
  max-width: 100%
  height: auto

.mobile-only
  display: initial !important

.desktop-only
  display: none !important

input, select, a
  &:focus
    outline: none
    color: $color-red
    img
      filter: drop-shadow(0 0 40px $color-red)

svg.pagination-arrow
  path
    fill: $color-black

// ******************************************************

// FORM

input, select
  appearance: none
  background: none
  border: 0
  border-radius: 0
  border-bottom: 2px solid $color-black
  padding: 0

// ******************************************************

// HEADER

#header
  position: fixed
  width: 100vw
  top: 0
  left: 0
  z-index: 500
  transition: color 300ms

#nav-cart-count
  vertical-align: middle

// ******************************************************

// INDEX

#header
  &.index-header
    position: absolute
    color: $color-white
    will-change: color, top

#front-splash
  position: absolute
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  overflow: hidden
  background-color: $color-black
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  pointer-events: none
  iframe
    position: absolute
    top: 50%
    left: 50%
    height: 56.25vw
    width: 177.77777778vh
    min-height: 100%
    min-width: 100%
    transform: translate(-50%, -50%)
    box-sizing: border-box
    pointer-events: none

#front-video
  height: 100vh
  width: calc('(100vh / 9) * 16')

#front-logo-holder
  position: absolute
  top: 0
  left: 0
  width: 100vw
  height: 100vh

#front-logo
  filter: drop-shadow(0 0 100px $color-white)

// ******************************************************

// PRODUCT

#product-title
  display: inline
  line-height: 1.15
  &:after
    content: ' '

#product-gallery
  position: relative
  overflow: hidden

#product-gallery-row
  position: absolute
  width: 100vw

.product-gallery-item, .product-gallery-image
  pointer-events: none
  font-size: 0

#product-tag-list
  list-style-type: disc

.selector-wrapper
  display: flex
  flex-direction: row
  align-items: center
  label
    flex: 0 1 auto
    font-weight: bold
    text-transform: uppercase
    &:after
      content: ': '

#product-unavailable
  display: none

#product-add-holder
  &.out-of-stock
    #product-unavailable
      display: block

#add
  border: 0
  background: none
  font-weight: bold
  text-transform: uppercase
  cursor: pointer
  &:disabled
    cursor: default

// ******************************************************

// BLOG

#about-blog, #about-blog-single
  iframe
    max-width: 100%

#blog-border-block
  display: none

.blog-item-mobile
  max-width: 400px

h2.blog-title
  margin-bottom: 1rem

.blog-item, .blog-item-mobile
  &:last-of-type
    margin-bottom: 0

// ******************************************************

// FOOTER

#footer
  background-color: $color-black
  color: $color-white

// ******************************************************

// DOODLE

#doodle
  position: fixed
  top: 0
  left: 0
  height: 100vh
  width: 100vw
  z-index: 900
  pointer-events: none
  mix-blend-mode: overlay
  opacity: .9
  svg
    position: absolute
    width: 90vw
    height: 90vh
    top: 5vh
    left: 5vw
    path, polyline
      fill: none
      stroke: $color-white
      opacity: 0

// ******************************************************

// MEDIA QUERIES

$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 1.5)
$margin-mid = ($gutter * 2.5)
$margin-large = ($gutter * 5)

$font-size-extra = 56px
$font-size-large = 40px
$font-size-mid = 28px
$font-size-basic = 18px
$font-size-small = 16px
$font-size-tiny = 12px
$font-size-micro = 10px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny, $font-size-micro)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 18px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 1.5)
  $margin-mid = ($gutter * 2.5)
  $margin-large = ($gutter * 5)

  $font-size-extra = 120px
  $font-size-large = 70px
  $font-size-mid = 32px
  $font-size-basic = 21px
  $font-size-small = 18px
  $font-size-tiny = 14px
  $font-size-micro = 12px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid(680px, $gutter, m)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny, $font-size-micro)

  .mobile-only
    display: none !important

  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 1.5)
  $margin-mid = ($gutter * 2.5)
  $margin-large = ($gutter * 5)

  $font-size-extra = 170px
  $font-size-large = 120px
  $font-size-mid = 36px
  $font-size-basic = 28px
  $font-size-small = 22px
  $font-size-tiny = 18px
  $font-size-micro = 13px

  grid(1000px, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny, $font-size-micro)

  .desktop-only
    display: initial !important

  @import 'responsive/desktop'

@media screen and (min-width: 1280px)

  $font-size-extra = 200px
  $font-size-large = 144px
  $font-size-mid = 40px
  $font-size-basic = 32px
  $font-size-small = 24px
  $font-size-tiny = 20px
  $font-size-micro = 14px

  grid(1200px)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny, $font-size-micro)

  @import 'responsive/monitor'

@media screen and (min-width: 1366px)

  $font-size-basic = 36px

  grid(1300px)

  font-sizes($font-size-basic)

  @import 'responsive/hd'
