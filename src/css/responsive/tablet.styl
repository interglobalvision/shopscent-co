$header-height = 95px

// ******************************************************

// BASIC

#main-content
  min-height: calc('100vh - ' + $header-height)
  margin-top: $header-height

// ******************************************************

// INDEX

#header
  &.index-header
    top: calc('100vh - ' + ($margin-basic * 3))

#main-content
  &.index-content
    margin-top: calc('100vh + ' + $header-height)

svg.pagination-arrow
  width: 80px

// ******************************************************

// ABOUT

#blog-desktop
  display: flex

#blog-mobile
  display: none

// ******************************************************

// PRODUCT

#product-header
  text-align: initial

#product-gallery, .product-gallery-image
  height: 400px

#product-tag-list
  padding-left: $margin-basic

.selector-wrapper
  margin-bottom: $margin-small
  label
    margin-right: $margin-small
    font-size: $font-size-small
  select
    flex: 1 0 auto
    padding-bottom: 2px

#product-add-holder
  text-align: center

// ******************************************************

// FOOTER

#contact-links
  text-align: right
  justify-content: flex-end

// ******************************************************
