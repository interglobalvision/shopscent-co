$header-height = 66px

// ******************************************************

// BASIC

#main-content
  min-height: calc('100vh - ' + $header-height)
  margin-top: $header-height

// ******************************************************

// INDEX

#header
  &.index-header
    top: calc('100vh - ' + $header-height)

#main-content
  &.index-content
    margin-top: calc('100vh + ' + $header-height)

svg.pagination-arrow
  width: 60px

// ******************************************************

// PRODUCT

#product-header
  text-align: center

#product-gallery, .product-gallery-image
  height: 250px

#product-tag-list
  padding-left: $margin-basic

.selector-wrapper
  margin-bottom: $margin-small
  label
    margin-right: $margin-small
    font-size: $font-size-small
  select
    flex: 0 1 auto

// ******************************************************

// BLOG

#blog-desktop
  display: none

.blog-item-single
  max-width: 400px

// ******************************************************

// FOOTER

#contact-links
  text-align: center

// ******************************************************
